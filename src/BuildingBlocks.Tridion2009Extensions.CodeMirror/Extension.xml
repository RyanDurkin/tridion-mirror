<?xml version="1.0" encoding="UTF-8"?>
<Extension ID="CodeMirror" xmlns="http://www.tridion.com/ContentManager/5.2/WebGUI/Extensions">
	<OnOpenItem>
		<Script SRC="jquery.js" Language="Javascript">
			<IncludeFor ItemType="2048" />
		</Script>
		<Script SRC="codemirror/codemirror.js" Language="JavaScript">
			<IncludeFor ItemType="2048"/>
		</Script>
		<Script SRC="codemirror/overlay.js" Language="JavaScript">
			<IncludeFor ItemType="2048"/>
		</Script>
		<Script SRC="codemirror/xml.js" Language="JavaScript">
			<IncludeFor ItemType="2048"/>
		</Script>
		<Script SRC="tridion2009-code-mirror-extension.js" Language="JavaScript">
			<IncludeFor ItemType="2048"/>
		</Script>
	</OnOpenItem>
	<Toolbar>
		<Button toolbarType="item" toolbarBlockId="ToolSave" toolbarBlockLocation="">
			<toolbarbutton id="extCodemirror" stringId="40001" stringDescr="EnableCodeMirror" img="/Images/Icons/AAnchor.21x21.Toolbar.gif"/>
		</Button>
		<DisplayWhen>true</DisplayWhen>
		<EnableWhen>true</EnableWhen>
		<Execute>EnableCodeMirror()</Execute>
	</Toolbar>
</Extension>
